<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.mapper.room">

    <!-- 채팅방 목록 가져오기 쿼리 -->
    <select id="getRoomList" resultType="com.proj.main.chat.dto.RoomDTO">
        SELECT
              room_no
            , room_name
            , create_date
        FROM
            rooms
        ORDER BY create_date DESC
    </select>

    <!-- 새로운 채팅방 생성 쿼리 -->
    <insert id="insertRoom" parameterType="com.proj.main.chat.dto.RoomDTO">
        INSERT INTO rooms (
              room_no
            , room_name
            , create_date
        ) VALUES (
              #{roomNo}
            , #{roomName}
            , SYSDATE
        )
    </insert>

    <!-- 채팅방 삭제 쿼리 -->
    <delete id="deleteRoom" parameterType="int">
        DELETE FROM rooms
        WHERE room_no = #{roomNo}
    </delete>

    <!-- 특정 채팅방의 정보 가져오기 쿼리 -->
    <select id="getRoom" parameterType="int" resultType="com.proj.main.chat.dto.RoomDTO">
        SELECT
              room_no
            , room_name
            , create_date
        FROM
            rooms
        WHERE room_no = #{roomNo}
    </select>

</mapper>