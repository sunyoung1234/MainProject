<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.proj.main.chat.dao.IRoomDAO">

    <!-- 채팅방 목록 가져오기 쿼리 -->
    <select id="getRoomList" resultType="com.proj.main.chat.dto.RoomDTO">
        SELECT
              room_no
            , room_name
            , reg_date
        FROM
            rooms
        ORDER BY reg_date DESC
    </select>


    <!-- 채팅방 삭제 쿼리 -->
    <delete id="deleteRoom" parameterType="int">
        DELETE FROM rooms
        WHERE room_no = #{roomNo}
    </delete>

    <!-- 특정 채팅방의 정보 가져오기 쿼리 -->
    <select id="getRoom" parameterType="int" resultType="com.proj.main.chat.dto.RoomDTO">
        SELECT
              room_no,
              room_name,
              reg_date
        FROM
            rooms
        WHERE room_no = #{roomNo}
    </select>

    <!-- 채팅방 생성 -->
	<insert id="createRoom" parameterType="com.proj.main.chat.dto.RoomDTO">
	    INSERT INTO rooms (
	          room_no,
	          room_name,
	          mem_id,
	          mem_name,
	          reg_date
	    ) VALUES (
	          room_seq.NEXTVAL,  <!-- 시퀀스를 통해 room_no를 자동 생성 -->
	          #{roomName},
	          #{memId},
	          #{memName},
	          SYSDATE
	    )
	</insert>

</mapper>
